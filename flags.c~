#include "ft_ls.h"

int	search_flags(char **argv, int argc, char flag)
{
	int	i;

	i = 1;
	ft_printf("argc vaut %d\n",argc);
	while (i < argc)
	{
		if (argv[i][0] == '-')
			if (argv[i][1] == flag)
				return (1);
		i++;
	}
	return (0);
}
